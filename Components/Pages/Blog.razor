@page "/blog"
@using Portfolio.Services
@using Portfolio.Models
@using Portfolio.Components.Shared
@using Microsoft.Extensions.Localization
@using Portfolio.Resources
@inject BlogService BlogService
@inject TerminalCommandService CommandService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject IStringLocalizer<SharedResources> Localizer
@rendermode InteractiveServer

<PageTitle>Blog - Hyunjo Jung</PageTitle>

<div class="terminal-container">
    <div class="terminal-header">
        <span class="terminal-title">hyunjo@@dev:~$ cat blog/*</span>
        <div class="terminal-controls">
            <span class="control-btn close"></span>
            <span class="control-btn minimize"></span>
            <span class="control-btn maximize"></span>
        </div>
    </div>

    <div class="terminal-body">
        <div class="command-line">
            <span class="prompt">hyunjo@@dev</span>
            <span class="path">~/blog</span>
            <span class="cursor">$</span>
            <span class="command">ls -la --color</span>
        </div>

        @if (isLoading)
        {
            <div class="loading">
                <pre>
██████╗ ██╗      ██████╗  ██████╗
██╔══██╗██║     ██╔═══██╗██╔════╝
██████╔╝██║     ██║   ██║██║  ███╗
██╔══██╗██║     ██║   ██║██║   ██║
██████╔╝███████╗╚██████╔╝╚██████╔╝
╚═════╝ ╚══════╝ ╚═════╝  ╚═════╝
                </pre>
                <p class="loading-text">@Localizer["Blog.Loading"]</p>
            </div>
        }
        else
        {
            <div class="search-section">
                <div class="command-line search-command">
                    <span class="prompt">hyunjo@@dev</span>
                    <span class="path">~/blog</span>
                    <span class="cursor">$</span>
                    <span class="command">grep -i "</span>
                    <input type="text"
                           class="search-input"
                           @bind="searchQuery"
                           @bind:event="oninput"
                           placeholder="@Localizer["Blog.SearchPlaceholder"]"
                           @onkeyup="FilterPosts" />
                    <span class="command">"</span>
                </div>

                @if (!string.IsNullOrEmpty(selectedTag))
                {
                    <div class="active-filter">
                        <span class="filter-label">@Localizer["Blog.ActiveFilter"]</span>
                        <span class="filter-tag">@@@selectedTag</span>
                        <button class="clear-filter" @onclick="ClearTagFilter">✕</button>
                    </div>
                }
            </div>

            <div class="blog-stats">
                <span class="stat">@Localizer["Blog.Total"] @posts.Count</span>
                <span class="stat">@filteredPosts.Count @Localizer["Blog.Visible"]</span>
                <span class="stat">@featuredPosts.Count @Localizer["Blog.Featured"]</span>
                <span class="stat">@tags.Count @Localizer["Blog.Tags"]</span>
            </div>

            @if (filteredFeaturedPosts.Any())
            {
                <section class="featured-section">
                    <div class="section-header">
                        <span class="prompt">#</span> @Localizer["Blog.FeaturedPosts"]
                    </div>
                    @foreach (var post in filteredFeaturedPosts)
                    {
                        <a href="/blog/@post.Slug" class="post-card featured">
                            <div class="post-meta">
                                <span class="date">[@post.PublishedDate.ToString("yyyy-MM-dd")]</span>
                                <span class="read-time">~@post.ReadTimeMinutes min</span>
                                <span class="category">[@post.Category]</span>
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <span class="image-indicator" style="color: var(--term-yellow); font-size: 10px; border: 1px solid var(--term-yellow); padding: 0 4px; border-radius: 2px; margin-left: auto;">[IMG]</span>
                                }
                            </div>
                            <h2 class="post-title">
                                <span class="prompt">></span> @post.Title
                            </h2>
                            <p class="post-description">@post.Description</p>
                            <div class="post-tags">
                                @foreach (var tag in post.Tags)
                                {
                                    <span class="tag" @onclick="() => FilterByTag(tag)" @onclick:preventDefault="true">@@@tag</span>
                                }
                            </div>
                        </a>
                    }
                </section>
            }

            <section class="posts-section">
                <div class="section-header">
                    <span class="prompt">#</span> @Localizer["Blog.AllPosts"]
                </div>
                <div class="posts-list">
                    @foreach (var post in filteredRegularPosts)
                    {
                        <a href="/blog/@post.Slug" class="post-card">
                            <div class="post-meta">
                                <span class="date">[@post.PublishedDate.ToString("yyyy-MM-dd")]</span>
                                <span class="read-time">~@post.ReadTimeMinutes min</span>
                                @if (!string.IsNullOrEmpty(post.Category))
                                {
                                    <span class="category">[@post.Category]</span>
                                }
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <span class="image-indicator" style="color: var(--term-yellow); font-size: 10px; border: 1px solid var(--term-yellow); padding: 0 4px; border-radius: 2px; margin-left: auto;">[IMG]</span>
                                }
                            </div>
                            <h3 class="post-title">
                                <span class="prompt">></span> @post.Title
                            </h3>
                            <p class="post-description">@post.Description</p>
                            <div class="post-tags">
                                @foreach (var tag in post.Tags)
                                {
                                    <span class="tag" @onclick="() => FilterByTag(tag)" @onclick:preventDefault="true">@@@tag</span>
                                }
                            </div>
                        </a>
                    }
                </div>
            </section>

            @if (tags.Any())
            {
                <section class="tags-section">
                    <div class="section-header">
                        <span class="prompt">#</span> @Localizer["Blog.BrowseByTag"]
                    </div>
                    <div class="tags-cloud">
                        @foreach (var tag in tags)
                        {
                            <a href="/blog/tag/@tag" class="tag-link">@@@tag</a>
                        }
                    </div>
                </section>
            }
        }

        <div class="terminal-input-section">
            <div class="command-line">
                <span class="prompt">hyunjo@@dev</span>
                <span class="path">~/blog</span>
                <span class="cursor">$</span>
                <input type="text"
                       class="terminal-input"
                       @bind="terminalInput"
                       @bind:event="oninput"
                       @onkeydown="HandleTerminalKeyDown"
                       @ref="terminalInputElement"
                       placeholder="Type a command or 'help'..."
                       autocomplete="off"
                       spellcheck="false" />
            </div>
        </div>

        @if (!string.IsNullOrEmpty(commandOutput))
        {
            <div class="command-output">
                <pre>@commandOutput</pre>
            </div>
        }
    </div>
</div>

<style>
    .terminal-input-section {
        margin-top: 2rem;
    }

    .terminal-input-section .command-line {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .terminal-input {
        background: transparent;
        border: none;
        border-bottom: 2px solid #44475a;
        color: #f1fa8c;
        font-family: 'Courier New', monospace;
        font-size: 14px;
        outline: none;
        padding: 4px 8px;
        margin: 0;
        width: 80%;
        transition: border-color 0.3s;
    }

    .terminal-input:focus {
        border-bottom-color: #bd93f9;
    }

    .terminal-input::placeholder {
        color: #6272a4;
    }

    .terminal-input-section .cursor-block {
        display: inline-block;
        vertical-align: middle;
        line-height: 1;
        font-size: 18px;
    }

    .command-output {
        background: transparent;
        border-left: 2px solid #6272a4;
        padding: 0.5rem 0 0.5rem 1rem;
        margin: 0.5rem 0 1rem 0;
        color: #8be9fd;
    }

    .command-output pre {
        margin: 0;
        white-space: pre-wrap;
        font-family: 'Courier New', monospace;
        font-size: 14px;
        line-height: 1.5;
    }
</style>

@code {
    private List<BlogPost> posts = new();
    private List<BlogPost> featuredPosts = new();
    private List<BlogPost> regularPosts = new();
    private List<BlogPost> filteredPosts = new();
    private List<BlogPost> filteredFeaturedPosts = new();
    private List<BlogPost> filteredRegularPosts = new();
    private List<string> tags = new();
    private bool isLoading = true;
    private string searchQuery = string.Empty;
    private string? selectedTag = null;
    private string terminalInput = string.Empty;
    private ElementReference terminalInputElement;
    private string commandOutput = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPostsAsync();
        FilterPosts();
        isLoading = false;
    }

    private async Task HandleTerminalKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(terminalInput))
        {
            var command = terminalInput.Trim();
            terminalInput = string.Empty;

            var result = await CommandService.ExecuteCommandAsync(command, "/blog");

            if (!string.IsNullOrEmpty(result.NavigateTo))
            {
                Navigation.NavigateTo(result.NavigateTo);
            }
            else if (!string.IsNullOrEmpty(result.Output))
            {
                commandOutput = result.Output;
            }
        }
    }

    private async Task LoadPostsAsync()
    {
        posts = await BlogService.GetAllPostsAsync();
        featuredPosts = posts.Where(p => p.IsFeatured).ToList();
        regularPosts = posts.Where(p => !p.IsFeatured).ToList();
        tags = await BlogService.GetAllTagsAsync();
    }

    private void FilterPosts()
    {
        var query = searchQuery?.ToLower() ?? string.Empty;

        filteredPosts = posts.Where(p =>
            (string.IsNullOrEmpty(query) ||
             p.Title.Contains(query, StringComparison.OrdinalIgnoreCase) ||
             p.Description.Contains(query, StringComparison.OrdinalIgnoreCase) ||
             p.Tags.Any(t => t.Contains(query, StringComparison.OrdinalIgnoreCase))) &&
            (selectedTag == null || p.Tags.Contains(selectedTag))
        ).ToList();

        filteredFeaturedPosts = filteredPosts.Where(p => p.IsFeatured).ToList();
        filteredRegularPosts = filteredPosts.Where(p => !p.IsFeatured).ToList();
    }

    private void FilterByTag(string tag)
    {
        selectedTag = tag;
        FilterPosts();
    }

    private void ClearTagFilter()
    {
        selectedTag = null;
        FilterPosts();
    }
}